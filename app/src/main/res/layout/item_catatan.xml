<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorSurfaceVariant">

        <ImageView
            android:id="@+id/imagePin"
            android:layout_width="24dp" 
            android:layout_height="24dp"
            android:src="@android:drawable/btn_star_big_on" 
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" 
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/textViewJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/imagePin"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            tools:text="Judul Catatan" />

        <TextView
            android:id="@+id/textViewKonten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewJudul"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="Ini adalah contoh isi catatan yang cukup panjang untuk melihat efek elipsis." />

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewKonten"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="01/Jan/2025" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>